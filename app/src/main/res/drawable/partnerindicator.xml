<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp"/>

            <solid android:color="@color/okIndicator"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
        <solid android:color="@color/badIndicator"/>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
        <solid android:color="@color/goodIndicator"/>
    </item>
</selector>