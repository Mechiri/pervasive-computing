<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="203dp"
                android:layout_height="68dp"
                android:gravity="center"
                android:text="Add Event"
                android:textColor="@color/darkgreen"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/primary"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/partnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/primary"
                android:ems="10"
                android:hint="Partner Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="187dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Select Date"
                    android:paddingLeft="5dp"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerEvent"
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="60dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:paddingBottom="5dp"
                android:text="Love Languages"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Rate partner's use of quality time:"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/timesBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="3"
                android:thumb="@drawable/seek_bar_circle" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Rate partner's conversation quality:"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/convsBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="3"
                android:thumb="@drawable/seek_bar_circle" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Rate partner's use of gifts:"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/giftsBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="3"
                android:thumb="@drawable/seek_bar_circle" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="288dp"
                android:layout_height="37dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Rate partner's use of service acts:"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/servicesBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="3"
                android:thumb="@drawable/seek_bar_circle" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Rate partner's use of physical touch:"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/touchsBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="3"
                android:thumb="@drawable/seek_bar_circle" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="New Traits Learned"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextTextPersonTraits"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:hint="New Trait"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/addPartnerTraitB"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/seek_bar_circle"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:text="Add Pictures"
                android:textColor="@color/darkgreen"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="88dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eventPicture"
                    android:layout_width="228dp"
                    android:layout_height="88dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/addPictureB"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/seek_bar_circle"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </LinearLayout>

            <Button
                android:id="@+id/nextEventB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/seek_bar_circle"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="32sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>