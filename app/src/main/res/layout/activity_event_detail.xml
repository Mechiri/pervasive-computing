<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventTitleDetail"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Temp"
                android:textColor="@color/darkgreen"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventDateDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:paddingRight="2dp"
                    android:text="MM/DD/YYYY"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:text="\u25CF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="121dp"
                    android:layout_height="21dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="10dp"
                    android:text="Date"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Event Type:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/eventTypeDetail"
                    android:layout_width="121dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="10dp"
                    android:text="Temp"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Love Languages"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/physicaltouch" />

                <SeekBar
                    android:id="@+id/PTSeekBarDetail"
                    android:layout_width="300dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:thumb="@drawable/seekbardot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/wordsofaffirmation" />

                <SeekBar
                    android:id="@+id/WOASeekBarDetail"
                    android:layout_width="300dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:thumb="@drawable/seekbardot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/gifts" />

                <SeekBar
                    android:id="@+id/GSeekBarDetail"
                    android:layout_width="300dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:thumb="@drawable/seekbardot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/actsofservice" />

                <SeekBar
                    android:id="@+id/AOSSeekBarDetail"
                    android:layout_width="300dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:thumb="@drawable/seekbardot" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/qualitytime" />

                <SeekBar
                    android:id="@+id/QTSeekBarDetail"
                    android:layout_width="300dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:thumb="@drawable/seekbardot" />

            </LinearLayout>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="Traits Learned"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventTraitsDetail"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="Pictures"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/eventImgDetail"
                android:layout_width="110dp"
                android:layout_height="95dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/loading"/>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="What did you talk about?"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/talkAboutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="What did they do that you really like?"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/youReallyLikedDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="What happened that you didn't like?"
                android:textColor="@color/darkgreen"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/youDidNotLikedDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/primary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backDetailsB"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="315dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rotenextbutton"
                android:rotationY="180"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>