<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="150dp">

    <Button
        android:id="@+id/choice2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="266dp"
        android:layout_height="76dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="195dp"
        android:background="@drawable/choiceborder_inactive"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice1" />

    <TextView
        android:id="@+id/question"
        android:layout_width="260dp"
        android:layout_height="74dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="39dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/choice1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choice1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="266dp"
        android:layout_height="76dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/choiceborder_inactive"
        android:drawableLeft="@color/primary"
        android:drawableTop="@color/primary"
        android:drawableRight="@color/primary"
        android:drawableBottom="@color/primary"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:theme="@style/Theme.MaterialComponents"
        app:layout_constraintBottom_toTopOf="@+id/choice2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

</androidx.constraintlayout.widget.ConstraintLayout>